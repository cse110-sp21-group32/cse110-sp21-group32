{
  "rules": {
    "color-no-invalid-hex": true, 

    // Indentation
    "indentation": [
      2,                                            // Space 2 tabbing
      {
        "baseIndentLevel": 1,                       // Indent child elements
        "auto": true
      }
    ],

    "selector-class-pattern": "foo-[a-z]+",         // Specify a pattern for class selectors (i.e. .foo-bar)
    "string-quotes": "double",                      // Double quotes

    // Lower case everything
    "function-name-case": "lower",                  // Specifies lowercase for function names
    "property-case": "lower",                       // Specifies lowercase for properties
    "selector-pseudo-class-case": "lower",          // Specifies lowercase for pseudo-class selectors
    "selector-pseudo-element-case": "lower",        // Specifies lowercase for pseudo-element selectors
    "selector-type-case": "lower",                  // Specifies lowercase for type selectors
    "unit-case": "lower",                           // Specifies lowercase for units
    "value-keyword-case": "lower"                   // Specifies lowercase for keywords values
  }
}